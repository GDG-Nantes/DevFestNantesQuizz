# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                        controllers.Application.index()

# Games page
GET     /game                    controllers.Application.game()
GET     /game/init               controllers.Application.initWebSocketGame()
GET     /game/resp               controllers.Application.websocketPlayer(player: Int ?= -1)
GET     /game/reset              controllers.Application.resetGame()
GET     /game/admin              controllers.Application.adminGame()
GET     /game/admin/connect      controllers.Application.connectAdminGame()

#Players
GET     /player/new              controllers.Application.newPlayer()
GET     /player                  controllers.Application.player(player: String ?= "-1")
GET     /player/register         controllers.Application.registerPlayer()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
